<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

        <!-- Ripple effect color -->
        <item name="colorControlHighlight">@color/light_blue</item>
        <item name="colorControlActivated">@color/teal_200</item>

        <!-- Elevation overlay -->
        <item name="elevationOverlayColor">@color/gray</item>

        <!-- Corner treatment -->
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.TodoApp.Medium
        </item>
    </style>

    <!-- Shape styles -->
    <style name="ShapeAppearance.TodoApp.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
